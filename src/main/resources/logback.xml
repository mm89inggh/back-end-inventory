<configuration>

  <include resource="org/springframework/boot/logging/logback/defaults.xml" />
  <include resource="org/springframework/boot/logging/logback/console-appender.xml" />
  <include resource="org/springframework/boot/logging/logback/file-appender.xml" />

  <property name="CONSOLE_LOG_PATTERN" value="%d{yyyy-MM-dd'T'HH:mm:ss.SSSXXX} %5p %clr([%t]) %logger{15} %replace(- %X{X-Request-ID:- }){'- $', ''} : %msg%n%throwable"/>
  <property name="FILE_LOG_PATTERN" value="%d{yyyy-MM-dd'T'HH:mm:ss.SSSXXX} %5p [%t] %-40.40logger{39} %replace(- %X{X-Request-ID:- }){'- $', ''} : %msg%n%throwable"/>
  <property name="LOG_FILE" value="${application.home:-.}/logs/application.log"/>

  <root level="INFO">
    <appender-ref ref="CONSOLE" />
    <appender-ref ref="FILE" />
  </root>

  <logger name="com.unir" level="debug" />

</configuration>
